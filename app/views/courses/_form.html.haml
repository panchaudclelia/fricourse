    = f.label :exam_date, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.datetime_select :exam_date, class: 'form-control'
  .form-group
    = f.label :type_of_evaluation, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :type_of_evaluation, class: 'form-control'
  .form-group
    = f.label :exam_duration, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :exam_duration, class: 'form-control'
