    = f.label :erasmus_students, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :erasmus_students, class: 'form-control'
  .form-group
    = f.label :condition, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :condition, class: 'form-control'
  .form-group
    = f.label :examination_regulation, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :examination_regulation, class: 'form-control'
